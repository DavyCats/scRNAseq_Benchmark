# DO NOT RUN THIS MANUALLY!!!

"""
Rule for downloading the environments when building the docker image.
"""
rule pre_install_environments:
  output:
    "Build_scripts/.{tool}.yml_environment_created"
  conda: "../Environments/{tool}.yml"
  shell: #Have to use shell, for conda to be allowed
    "touch Build_scripts/.{wildcards.tool}.yml_environment_created"
